const defaultLocale = 'en';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Redirecting...</title>
    <meta name="robots" content="noindex" />
    <link rel="canonical" href="https://novameat.com/en" />
    <script>
      function redirectToDefaultLocale() {
        const ref = document.referrer;
        const fromOutside = ref === '' || !ref.startsWith(window.location.origin);

        console.log("ğŸš€ Redirigiendo a /en");
        console.log("ğŸ”— Referrer:", ref);
        console.log("ğŸŒ From outside?", fromOutside);

        if (fromOutside) {
          // El usuario viene desde Google u otro dominio â†’ href (se agrega al historial)
          window.location.href = "/en";
        } else {
          // NavegaciÃ³n interna â†’ replace (limpio historial)
          window.location.replace("/en");
        }
      }

      // Redirige despuÃ©s de pintar (evita pantalla blanca)
      setTimeout(redirectToDefaultLocale, 100);
    </script>
  </head>

---
const defaultLocale = 'en';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Redirecting...</title>
    <meta name="robots" content="noindex" />
    <script>
      function redirectToDefaultLocale() {
        console.log("üöÄ Redirigiendo a /en");
        window.location.href = "/en";
      }

      // Redirige normalmente en primer acceso
      setTimeout(redirectToDefaultLocale, 500);

      // Redirige tambi√©n si el usuario vuelve atr√°s y la p√°gina se restaura desde memoria
      window.addEventListener("pageshow", (event) => {
        if (event.persisted) {
          console.log("‚ôªÔ∏è Volviendo desde el historial (bfcache)");
          setTimeout(redirectToDefaultLocale, 100);
        }
      });
    </script>
  </head>
  <body>
    <p>Redirecting to /en...</p>
  </body>
</html>
